<div class="container">
  <div class="row">
    {{#events}}
    <div class="col s6 m4">
     <div class="card purple lighten-1">
       <a href="/events/{{event_id}}">
         <div class="card-image">
           <img src="http://localhost:3000{{img_url}}">
           <span class="grey darken-4 card-title">{{event_name}}</span>
         </div>
       </a>
       <div class="card-content">
         <p>Date: {{startDate}} - {{endDate}}</p>
       </div>
       <div class="center-align card-action">
         <a class = " purple darken-4 btn waves-effect waves-light" href="/events/{{event_id}}">View <i class="material-icons right">send</i></a>
       </div>
     </div>
    </div>
    {{/events}}
  </div>

</div>
